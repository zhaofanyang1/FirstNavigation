<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.login.LoginActivity">

    <ImageView
        android:id="@+id/id_shut"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/shut"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/dp_16"
        tools:layout_editor_absoluteY="@dimen/dp_16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_44"
        android:gravity="center"
        android:text="@string/huanying"
        android:textColor="#000000"
        android:textSize="@dimen/dp_30"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/dp_0"
        tools:layout_editor_absoluteY="@dimen/dp_50" />

    <EditText
        android:id="@+id/id_phone_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_98"
        android:hint="  请输入手机号"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/dp_0"
        tools:layout_editor_absoluteY="@dimen/dp_110"
        android:layout_alignParentLeft="true" />


    <EditText
        android:id="@+id/id_verification_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_phone_number"
        android:hint="  请输入验证码"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/dp_0"
        tools:layout_editor_absoluteY="@dimen/dp_168"
        android:layout_alignParentLeft="true"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/id_verification_number"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_113"
        android:layout_marginRight="@dimen/dp_113"
        android:text="|"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/dp_243"
        tools:layout_editor_absoluteY="@dimen/dp_186" />

    <TextView
        android:id="@+id/get_yanzhengma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/id_verification_number"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="获取验证码"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/dp_298"
        tools:layout_editor_absoluteY="@dimen/dp_186" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_208"
        android:gravity="center"
        android:text="未注册手机验证后自动登录"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/dp_0"
        tools:layout_editor_absoluteY="@dimen/dp_226"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_238"
        android:src="@mipmap/btn_login"
        tools:ignore="MissingConstraints,RtlCompat"
        tools:layout_editor_absoluteX="@dimen/dp_0"
        tools:layout_editor_absoluteY="@dimen/dp_276" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dp_213"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/dp_16"
        tools:layout_editor_absoluteY="@dimen/dp_345">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意“用户协议”" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dp_150"
        android:src="@mipmap/third"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/dp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dp_42"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/dp_0"
        tools:layout_editor_absoluteY="@dimen/dp_469"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/id_wichat"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/weichat" />

        <ImageView
            android:id="@+id/id_qq"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/qq" />

        <ImageView
            android:id="@+id/id_microblog"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/microblog" />
    </LinearLayout>
</RelativeLayout>